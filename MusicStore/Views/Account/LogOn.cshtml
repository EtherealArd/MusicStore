@model MusicStore.Models.LogOnModel

@{
    ViewBag.Title = "Вхід";
}

<h2>Вхід</h2>
<p>
    Будь-ласка введыть свій нікнейм та пароль. @Html.ActionLink("Реєстрація", "Register") якщо ви не має вже створеного аккаунту.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Вхід не був виконаний. Введіть коректні дані та спробуйте ще.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Інформація про обліковий запис</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Вхід" />
            </p>
        </fieldset>
    </div>
}

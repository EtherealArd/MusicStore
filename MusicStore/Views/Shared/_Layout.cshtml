<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" 
        type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" 
        type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1><a href="/">Каталог музики</a></h1>
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Головна</a></li>
            <li><a href="@Url.Content("~/Store/")">Каталог</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            @if (User.IsInRole("Admin"))
            {
                <li><a href="@Url.Content("~/StoreManager/")">Адмін</a></li>
            }
            <li>@Html.ActionLink("Тестові дані", "TextData","Home")</li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>@Html.ActionLink("Вихід", "LogOff", "Account")</li>
            }
        </ul>        
    </div>

@{Html.RenderAction("GenreMenu", "Store");}
@*@Html.Partial("~/Store/GenreMenu")*@

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>
</body>
</html>